<div class="jumbo border border-3 border-primary">
  <form action="/facultyreport/facultycharts" method="POST">
    <div class="mb-3">
      <div class="lead">
        <select name="course" id="course" class="custom-select" onclick="populate(this.id, 'department')">
          <option value="">-- Choose Course --</option>
          <option value="btech">Bachelor of Technology</option>
        </select>
      </div>
      </div>
    <div class="mb-3">
      <select name="department" id="department" class="custom-select">
        <option value="" class="default" selected disabled>
          
        </option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  </div>
  <script>
          
    function populate(s1,s2)
    {
      var s1 = document.getElementById(s1)
      var s2 = document.getElementById(s2)
    
      s2.innerHTML = "";
      if(s1.value == "btech"){
        var optionArray =  ['CSE|Computer Science and Engineering' ,
                            'MECHANICAL|Mechanical Engineering' ,
                            'CIVIL|Civil Engineering' ,
                            'ECE|Electronics and Communication Engineering',
                            'IPE|Industrial and Production Engineering',
                            'CHEMICAL|Chemical Engineering',
                            'IT|Information and Technology',
                            ];
      }
      for(var option in optionArray)
      {
        var pair = optionArray[option].split("|");
        var newoption = document.createElement("option");
  
        newoption.value = pair[0];
        newoption.innerHTML = pair[1];
  
        s2.options.add(newoption);
      }
    }
  
  </script>  